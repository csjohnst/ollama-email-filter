# Email Settings (Required)
EMAIL_USERNAME=your-email@example.com
EMAIL_PASSWORD=your-app-password
EMAIL_HOST=imap.example.com

# Email Settings (Optional - defaults shown)
EMAIL_PORT=993
EMAIL_COUNT=100
EMAIL_MAX_BODY_LENGTH=2000
EMAIL_INCLUDE_READ=false

# Service Settings (Optional - defaults shown)
POLLING_INTERVAL_MINUTES=5
MAX_RETRY_ATTEMPTS=3
RETRY_DELAY_SECONDS=30

# AI Provider Selection: ollama, openai, azureopenai, anthropic
AI_PROVIDER=ollama

# ============================================
# Ollama Settings (if AI_PROVIDER=ollama)
# ============================================
OLLAMA_BASE_URL=http://ollama:11434
OLLAMA_MODEL=llama3

# ============================================
# OpenAI Settings (if AI_PROVIDER=openai)
# ============================================
OPENAI_API_KEY=sk-your-openai-key
OPENAI_MODEL=gpt-4.1-nano

# ============================================
# Azure OpenAI Settings (if AI_PROVIDER=azureopenai)
# ============================================
AZURE_OPENAI_API_KEY=your-azure-key
AZURE_OPENAI_ENDPOINT=https://your-resource.openai.azure.com
AZURE_OPENAI_DEPLOYMENT=your-deployment-name
AZURE_OPENAI_API_VERSION=2024-02-15-preview

# ============================================
# Anthropic Settings (if AI_PROVIDER=anthropic)
# ============================================
ANTHROPIC_API_KEY=sk-ant-your-anthropic-key
ANTHROPIC_MODEL=claude-3-haiku-20240307

# ============================================
# Category Settings (Optional)
# Organize emails into Inbox subfolders
# ============================================
ENABLE_CATEGORIES=false

# Core categories (enabled by default when ENABLE_CATEGORIES=true)
CATEGORY_BILLS_ENABLED=true
CATEGORY_SHOPPING_ENABLED=true
CATEGORY_WORK_ENABLED=true
CATEGORY_PERSONAL_ENABLED=true

# Additional categories (disabled by default)
CATEGORY_EDUCATION_ENABLED=false
CATEGORY_SOCIAL_ENABLED=false
CATEGORY_EVENTS_ENABLED=false
CATEGORY_TRAVEL_ENABLED=false
CATEGORY_FINANCE_ENABLED=false
CATEGORY_HEALTH_ENABLED=false
